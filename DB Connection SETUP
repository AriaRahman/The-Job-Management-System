

import java.lang.*;
import java.sql.*;

public class Store {
    public static void main(String[]args) {
        System.out.println("DATABASE CONNECTION: ");
        try {
            Class.forName("com.mysql.cj.jdbc.Driver");

            Connection DB = DriverManager.getConnection("jdbc:mysql://localhost:3306/employment", "root", "");
            Statement query = DB.createStatement();
            ResultSet result = query.executeQuery("select * from store");

            System.out.println("JOB DETAILS:");
            System.out.println("JOB ACCOUNTNO     " + "JOB NAME" + "         SALARY   " + "    AUTHORITY ID");

            while (result.next()) {
                System.out.print(result.getInt(1));
                System.out.print("            "+result.getString(2));
                System.out.print("          "+result.getInt(3));
                System.out.println("              "+result.getInt(4));
            }

